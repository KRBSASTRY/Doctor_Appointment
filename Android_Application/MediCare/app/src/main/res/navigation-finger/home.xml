<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/patientsLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patientâ€™s Login"
        android:textSize="32sp"
        android:textColor="#000000"
        android:layout_marginStart="355dp"
        android:layout_marginTop="180dp" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="227dp"
        android:layout_height="56dp"
        android:hint="User Name"
        android:textSize="24sp"
        android:layout_marginStart="357dp"
        android:layout_marginTop="242dp"
        android:background="#D9D9D9" />

    <EditText
        android:id="@+id/password"
        android:layout_width="221dp"
        android:layout_height="52dp"
        android:hint="Password"
        android:textSize="24sp"
        android:layout_marginStart="357dp"
        android:layout_marginTop="318dp"
        android:background="#D9D9D9" />

    <CheckBox
        android:id="@+id/rememberMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember"
        android:textSize="24sp"
        android:layout_marginStart="415dp"
        android:layout_marginTop="391dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_marginStart="415dp"
        android:layout_marginTop="470dp" />

    <TextView
        android:id="@+id/signupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGNUP"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginStart="297dp"
        android:layout_marginTop="669dp" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORGOT PASSWORD"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginStart="425dp"
        android:layout_marginTop="669dp" />

</FrameLayout>
