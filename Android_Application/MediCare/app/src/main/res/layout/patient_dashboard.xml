<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9C4">

    <TextView
        android:id="@+id/tvRamMedicalApplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medi Care"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvBookAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvRamMedicalApplication"
        android:text="BOOK APPOINTMENT"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginTop="100dp"/>


    <TextView
        android:id="@+id/tvSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvBookAppointment"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="SUMMARY"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvMyAppointments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSummary"
        android:layout_centerHorizontal="true"
        android:text="My Appointments"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginTop="50dp"/>

    <!-- Placeholder for Image 'person 4' -->
    <ImageView
        android:id="@+id/imgPerson4"
        android:layout_width="120dp"
        android:layout_height="134dp"
        android:layout_below="@id/tvMyAppointments"
        android:layout_centerHorizontal="true"
        android:src="@drawable/patients"
        android:layout_marginTop="16dp"/>


</RelativeLayout>
