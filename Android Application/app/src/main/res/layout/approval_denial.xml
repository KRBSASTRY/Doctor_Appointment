<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AppointmentReview">

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/tvPatientName"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvAppointmentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment Date"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvAppointmentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment Time"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/tvAppointmentDate"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvPatientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Name"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/tvAppointmentTime"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnApprove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Approve"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/tvStatus"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnDeny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deny"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/tvStatus"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/btnApprove"/>
    <TextView
        android:id="@+id/tvAppointmentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment ID"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/tvAppointmentDate"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

</RelativeLayout>
