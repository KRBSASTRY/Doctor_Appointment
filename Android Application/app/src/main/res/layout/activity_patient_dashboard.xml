<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_browse_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.patient_dashboard"
    tools:deviceIds="tv"
    tools:ignore="MergeRootFrame"
    android:background="#FFF9C4">

<TextView
    android:id="@+id/tvRamMedicalApplication"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Medi Care"
    android:layout_centerHorizontal="true"
    android:textSize="32sp"
    android:textColor="#000000"
    android:layout_marginTop="10dp"/>

<Button
    android:id="@+id/tvBookAppointment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/tvRamMedicalApplication"
    android:text="BOOK APPOINTMENT"
    android:textSize="22sp"
    android:textColor="#000000"
    android:layout_marginTop="100dp"/>


<Button
    android:id="@+id/tvSummary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/tvBookAppointment"
    android:layout_marginTop="50dp"
    android:layout_centerHorizontal="true"
    android:text="APPOINTMENT HISTORY"
    android:textColor="#000000"
    android:textSize="22sp" />

<Button
    android:id="@+id/tvMyAppointments"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/tvSummary"
    android:layout_centerHorizontal="true"
    android:text="My Appointments"
    android:textSize="22sp"
    android:textColor="#000000"
    android:layout_marginTop="50dp"/>

<!-- Placeholder for Image 'person 4' -->
<ImageView
    android:id="@+id/imgPerson4"
    android:layout_width="120dp"
    android:layout_height="134dp"
    android:layout_below="@id/tvMyAppointments"
    android:layout_centerHorizontal="true"
    android:src="@drawable/patients"
    android:layout_marginTop="16dp"/>


</RelativeLayout>
